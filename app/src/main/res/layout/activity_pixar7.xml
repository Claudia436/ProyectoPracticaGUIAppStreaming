<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PixarActivity7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#11141D">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/walle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:backgroundTint="#2C2F38"
                android:text="0+"
                android:textSize="17dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:layout_width="59dp"
                android:layout_height="45dp"
                android:backgroundTint="#2C2F38"
                android:text="HD"
                android:textSize="17dp"
                android:layout_marginRight="5dp"/>
            <Button
                android:layout_width="58dp"
                android:layout_height="45dp"
                android:backgroundTint="#2C2F38"
                android:text="CC"
                android:textSize="17dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2008 • 1 h 38 min"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="17dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ciencia ficción, Familiar, Animación, Acción y aventura"
            android:textColor="#8F8E91"
            android:gravity="center"
            android:textSize="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:text="▶ VER"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="77dp"
                android:layout_height="85dp"
                android:backgroundTint="#11141D"
                android:drawableTop="@drawable/mas"
                android:text="Mi lista"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="#8F8E91"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="103dp"
                android:layout_height="85dp"
                android:backgroundTint="#11141D"
                android:drawableTop="@drawable/grupo"
                android:text="GroupWatch"
                android:textStyle="bold"
                android:textColor="#8F8E91"
                android:textSize="11dp"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="103dp"
                android:layout_height="85dp"
                android:backgroundTint="#11141D"
                android:drawableTop="@drawable/trailer"
                android:text="GroupWatch"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="#8F8E91"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="92dp"
                android:layout_height="85dp"
                android:backgroundTint="#11141D"
                android:drawableTop="@drawable/descargar"
                android:text="Descargar"
                android:textStyle="bold"
                android:textSize="11dp"
                android:textColor="#8F8E91"
                android:textAllCaps="false"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Únete a los robots WALL-E e EVE en un fantástico vieje a través del universo."
            android:textColor="#8F8E91"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="30dp"
            android:textSize="21dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>