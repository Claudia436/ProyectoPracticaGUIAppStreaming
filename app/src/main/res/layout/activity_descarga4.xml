<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescargaActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#12151E">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descargas"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#AEAFB4"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:src="@drawable/iconodescarga"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tienes Descargas"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#AEAFB4"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí aparecerán las películas y"
            android:textSize="18dp"
            android:textColor="#AEAFB4"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="y series que te descarges."
            android:textSize="18dp"
            android:textColor="#AEAFB4"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/casa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/casa"
                android:backgroundTint="#12151E"
                android:layout_marginLeft="40dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/lupa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/lupa"
                android:backgroundTint="#12151E"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/descarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/descarga"
                android:backgroundTint="#12151E"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>