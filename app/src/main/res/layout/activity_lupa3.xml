<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#12151E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AEAEAE"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/lupa2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Búsqueda"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/originales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#15151F"
                android:drawableTop="@drawable/estrella"
                android:text="Originales"
                android:textColor="#AEAFB4"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/peliculas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#15151F"
                android:drawableTop="@drawable/peliculas"
                android:text="Películas"
                android:textColor="#AEAFB4"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#15151F"
                android:drawableTop="@drawable/series"
                android:text="Series"
                android:textColor="#AEAFB4"
                android:textAllCaps="false"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explorar"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#8F8E91"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coleccion"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coleccion2"
                android:layout_marginRight="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/casa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/casa"
                android:backgroundTint="#12151E"
                android:layout_marginLeft="40dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/lupa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/lupa"
                android:backgroundTint="#12151E"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/descarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/descarga"
                android:backgroundTint="#12151E"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>